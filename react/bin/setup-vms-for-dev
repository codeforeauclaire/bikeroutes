#!/bin/bash

# Starting a setup script, some of this may eventually find it's self to a vmsquickinstall

## Config: Calculated
# SCRIPT_PATH From SO @ https://goo.gl/JvL92M
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do
	DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
	SOURCE="$(readlink "$SOURCE")"
	[[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done
SCRIPT_PATH="$( cd -P "$( dirname "$SOURCE" )" && pwd )"

# Generic installs
## Node Version Manager w/recent node version
curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.31.0/install.sh | bash
nvm install v6.1.0
nvm use v6.1.0

# Webpack global access
npm install webpack -g
npm install webpack-dev-server -g

# Get into project path
cd $SCRIPT_PATH/../

# Install dependencies from package.json
npm install --save
